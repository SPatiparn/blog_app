<h1>Login</h1>

<%= form_with(url: login_path, method: :post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :username, "Username" %>
    <%= form.text_field :username, required: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Log In", class: "btn btn-primary" %>
  </div>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
<% end %>

<%= link_to "Forgot your password?", "#" %> | 
<%= link_to "Don't have an account? Sign up", new_user_path %>
